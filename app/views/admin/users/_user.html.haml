%tr
  %td
    - if can? :read, user
      = link_to user.name, admin_user_path(user)
    - else
      = user.name
  %td.hidden-xs
    -if user.admin?
      %i.fa.fa-check
  %td
    -if user.team_leader?
      = user.leads.map{|t| t.name}.to_sentence
  %td.hidden-xs= Skill.for_user(user).acquired.count
  %td.hidden-xs= Skill.for_user(user).training.count
  %td= user.teams.order(:name).map{|t| t.name}.to_sentence
