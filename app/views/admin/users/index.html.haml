- content_for :content_title do
  Staff

.box.box-primary
  .box-header.with-border
    %h3.box-title Staff list
    = render partial: 'shared/table_search'
  .box-body
    .box-body.table-response
      %table.table
        %thead
          %tr
            %th Name
            %th Administrator
            %th Team Lead
            %th Skills
            %th Training need
            %th Teams
        %tbody
          = render @users
    .box-footer
      = paginate @users, window: 3
