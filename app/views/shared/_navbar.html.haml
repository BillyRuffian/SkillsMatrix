/ Header Navbar: style can be found in header.less
%nav.navbar.navbar-static-top
  / Sidebar toggle button
  %a.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
    %span.sr-only Toggle navigation
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar

  - if user_signed_in?
    .navbar-custom-menu
      %ul.nav.navbar-nav
        %li.dropdown.user.user-menu
          %a{ href: '#', class: 'dropdown-toggle', :'data-toggle' => 'dropdown' }
            = image_tag "https://robohash.org/#{current_user.email}.jpg?size=160x160&bgset=bg1", class: 'user-image'
            %span.hidden-xs= current_user.name
          %ul.dropdown-menu
            %li.user-header
              = image_tag "https://robohash.org/#{current_user.email}.jpg?size=160x160&bgset=bg1", class: 'img-circle'
              %p
                = current_user.name
                %small
                  = pluralize( current_user.claims.count, 'skill' )
                  and
                  = pluralize( current_user.teams.count, 'team' )
            %li.user-body
              .row
                .col-xs-12.text-center
                  %a{ href: '#' } Fortune cookie
            %li.user-footer
              .pull-left
                = link_to 'profile', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
              .pull-right
                = link_to 'sign out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
